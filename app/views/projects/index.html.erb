<h1><%= @organization.name %></h1>

<ul>
    <% @organization.projects.each do |project| %>
      <li>
          <h2><%= link_to project.name, project_path(@organization,project) %></h2>
          <%= link_to 'Edit', edit_organization_project_path(@organization,project) %>
          <%= link_to 'Destroy', organization_project_path(@organization,project), :confirm => 'Are you sure?', :method => :delete %>
      </li>
    <% end%>
</ul>


<%= link_to 'New Project', new_organization_project_path(@organization) %>
